<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="ja">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Manage Article</title>
<%= stylesheet_link_tag "araki" %>
<%= javascript_include_tag "code-toggle-popup.js" %>
<%= javascript_include_tag "prototype.js" %>

</head>

<body>
<h1>article management</h1>

<% if @articles %>

<% if @articles_pages %>
<%= pagination_links @articles_pages %>
<% end %>

<%= form_tag :action => "delete_article" %>
<div class="kakomi">
<div id="ca">
[記事]を押すと記事が表示されます
</div>
</div>
<%= submit_tag "チェックした記事を削除する" %>
<table  border="1" cellspacing="0">
   <tr>
     <td>Delete?</td>
     <td>title</td>
     <td>date</td>
     <td>category</td>
     <td>body</td>
   </tr>

   <% @articles.each do |co| %>
   <tr>
     <td>
       <%= check_box "deleteid", co.id %>
       <%= link_to_remote ("[記事]", :update => "ca", :url => {:controller => "notes", :action => "pick_article_a", :pickid => co.id }) %>
     </td>
     <td><%= truncate(co.title) %></td>
     <td><%= co.article_date.to_date.to_s %></td>
     <td>
       <% co.categories.each do |cat| %>
       <%= link_to cat.name, {:controller => "notes", :action => "show_category", :category => cat.name} %>
       <% end %>
     </td>
     <td><%= truncate(co.body) %></td>
   </tr>
   <% end %>
 </table>
 <%= submit_tag "チェックした記事を削除する" %>
 <%= end_form_tag %>
 <% end %>

 <% if @articles_pages %>
 <%= pagination_links @articles_pages %>
 <% end %>

 <hr>
<address></address>
<!-- hhmts start -->Last modified: Sun Aug  7 00:15:39 JST 2005 <!-- hhmts end -->
</body> </html>
